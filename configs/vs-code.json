{
  // Place your settings in this file to overwrite the default settings
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontSize": 15,
  "workbench.editor.showTabs": false,
  "vtools.autoHideDelay": 10,
  "vtools.autoHideSideBar": false,
  "workbench.activityBar.visible": false,
  "window.menuBarVisibility": "default",
  "gitlens.codeLens.visibility": "off",
  "gitlens.blame.annotation.activeLine": "off",
  "eslint.run": "onType",
  "eslint.enable": true,
  "flow.runOnEdit": false,
  "flow.stopFlowOnExit": true,
  "flow.useNPMPackagedFlow": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.enablePreview": false,
  "javascript.validate.enable": false,
  "editor.minimap.enabled": false,
  "gitlens.blame.line.enabled": false,
  "window.zoomLevel": 0,
  "extensions.ignoreRecommendations": true,
  "vim.useCtrlKeys": false,
  "vim.disableAnnoyingNeovimMessage": true,
  "typescript.check.tscVersion": false,
  "haxe.enableCodeLens": false,
  "typescript.autoImportSuggestions.enabled": true,
  "materialTheme.cache.workbench.settings": {
    "themeColours": "Light",
    "accentPrevious": "Breaking Bad"
  },
  "workbench.colorCustomizations": {},
  "editor.minimap.showSlider": "always",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "workbench.iconTheme": "eq-material-theme-icons",
  "gitlens.historyExplorer.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sass]": {
    "editor.defaultFormatter": "syler.sass-indented"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmDragAndDrop": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
  "editor.largeFileOptimizations": false,
  "go.lintOnSave": "off",
  "go.vetOnSave": "off",
  "go.testOnSave": false,
  "[go]":  {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {}
},
}
